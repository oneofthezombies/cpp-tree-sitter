{
  "clangd.arguments": [
    "--header-insertion=never",
    "--compile-commands-dir=${workspaceFolder}/",
    "--query-driver=**"
  ],
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.formatOnSave": true,
    "editor.rulers": [80]
  },
  "[c]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.formatOnSave": true,
    "editor.rulers": [80]
  },
  "[cmake]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "cheshirekow.cmake-format",
    "editor.rulers": [80]
  }
}
